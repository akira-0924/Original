<%= form_for @result do |f| %>

    <br><%= f.label :バンド名 %>
    <br><%= f.text_field :band_name, :size => 50  %>
    <br><%= f.label :ジャンル %>
    <br><%= f.text_field :genre, :size => 50  %>
    <br><%= f.label :おすすめ一曲 %>
    <br><%= f.text_field :recommend, :size => 50  %>
    <br><%= f.label :説明 %>
    <br><%= f.text_area :discription, :size => "50*50" %>
    <br><%= f.label :URL %>
    <br><%= f.text_field :m_video, :size => 50  %>
    <br><%= f.label :image %>
    <br><%= f.file_field :image %>
    <br><%= f.submit "保存" %>
    <%= link_to "戻る", results_path %>
<% end %>
    