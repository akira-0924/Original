<%= stylesheet_link_tag "at_show", :media => "all" %>
<div class="main">
  <div class="icon" id="icon_c">
    <% @user.each do |i| %>
      <%= image_tag i.image_url,class: "icon_image", size: "50x50" if i.image? %>
      <div class="icon_modal">
        <%= image_tag i.image_url,class: "icon_image_mo", size: "100x100" if i.image? %>
        <span class="icon_dis icon_name"><%= i.name %></span>
        <br><span class="icon_dis icon_mail"><%= i.email %></span>
        <br><%= link_to "マイページ", user_path(current_user.id),class:"modal_show modal_show1", data: {"turbolinks" => false} %>
        <%= link_to "プロフィール編集", edit_user_registration_path , class: 'modal_show modal_show2', data: {"turbolinks" => false}%>
      </div>
    <% end %>
  </div>
  <div class="artist_show">
    <div class="atshow-header">
      <h1>Artist details</h1>
    </div>
    <div class="artist">
      <div class="img_name">
        <%= image_tag @artist.image_url,class: "show_images", size: "90%x90%" if @artist.image? %>
        <br><%= @artist.at_name %>
      </div>
      <h3>RECOMMEND</h3>
      <div class="recommend">
        <p><%= @artist.recommend %></p>
      </div>
      <h3>GENRE</h3>
      <div class="genre">
        <p><%= @artist.genre %></p>
      </div>
      <h3>DESCRIPTION</h3>
      <div class="more">
        <p><%= @artist.more %></p>
      </div>
      <h3>OTHERS RECOMMEN ARTIST</h3>
      <div class="other">
        <p><%= @artist.other %></p>
      </div>
      <div class="bt-area">
        <% if user_signed_in? && current_user.id == @artist.user_id %>
          <%= link_to "編集する", edit_artist_path(@artist.id),{class: "link_to",data:{"turbolinks" => false}} %>
        <% end %>
        <%= link_to "アーティスト一覧に戻る", artists_path,{class: "link_to",data:{"turbolinks" => false}} %>
      </div>
    </div>
  </div>
</div>
